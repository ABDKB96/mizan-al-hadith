                narrator: 'ุนุจุฏุงููู ุจู ุนูุฑ ุฑุถู ุงููู ุนูููุง',
                source: 'ุณูู ุงูุชุฑูุฐู',
                grade: 'ุตุญูุญ',
                hadithNumber: '1535',
                scholarSayings: ['ุตุญุญู ุงูุฃูุจุงูู', 'ุตุญุญู ุงูุชุฑูุฐู'],
                reasons: ['ุฅุณูุงุฏู ุตุญูุญ'],
                explanation: 'ุชุญุฑูู ุงูุญูู ุจุบูุฑ ุงูููุ ูุฃูู ูู ุงูุดุฑู ุงูุฃุตุบุฑ.',
                category: 'shirk'
            }
        ];

        // ุฏุงูุฉ ูุนุฑุถ ุงูุฃุญุงุฏูุซ
        function displayHadiths(hadithsToDisplay) {
            const container = document.getElementById('hadithContainer');
            container.innerHTML = '';
            
            if (hadithsToDisplay.length === 0) {
                container.innerHTML = '<div class="no-results">ูุง ุชูุฌุฏ ุฃุญุงุฏูุซ ุชุทุงุจู ูุนุงููุฑ ุงูุจุญุซ</div>';
                return;
            }
            
            hadithsToDisplay.forEach(hadith => {
                // ุชุญุฏูุฏ ูุฆุฉ ุงูุฏุฑุฌุฉ
                let gradeClass = 'grade-sahih';
                if (hadith.grade.includes('ุญุณู')) gradeClass = 'grade-hasan';
                if (hadith.grade.includes('ูุชูู')) gradeClass = 'grade-agreed';
                
                // ุชุญุฏูุฏ ุงุณู ุงููุฆุฉ ุงูุนุฑุจูุฉ
                let categoryName = '';
                switch(hadith.category) {
                    case 'tawheed': categoryName = 'ุงูุชูุญูุฏ'; break;
                    case 'iman': categoryName = 'ุฃุฑูุงู ุงูุฅููุงู'; break;
                    case 'allah': categoryName = 'ุฃุณูุงุก ุงููู ูุตูุงุชู'; break;
                    case 'qadaa': categoryName = 'ุงููุฏุฑ'; break;
                    case 'afterlife': categoryName = 'ุงูุขุฎุฑุฉ'; break;
                    case 'shirk': categoryName = 'ุงูุดุฑู ูุงูุชุญุฐูุฑ'; break;
                    default: categoryName = 'ุงูุนููุฏุฉ';
                }
                
                // ุฅูุดุงุก ุนูุงุตุฑ ูุงุฆูุฉ ุฃููุงู ุงูุนููุงุก
                const scholarItems = hadith.scholarSayings.map(saying => `<li>${saying}</li>`).join('');
                
                const hadithCard = `
                    <div class="hadith-card">
                        <div class="category-tag">${categoryName}</div>
                        <div class="hadith-header">
                            <div class="hadith-id">ุงูุญุฏูุซ ุฑูู: ${hadith.id}</div>
                            <div class="hadith-grade ${gradeClass}">${hadith.grade}</div>
                        </div>
                        <div class="hadith-body">
                            <div class="hadith-text">${hadith.text}</div>
                            <div class="hadith-narrator">๐ ${hadith.narrator}</div>
                            <div class="hadith-source">
                                <span>๐ ${hadith.source}</span>
                                <span>ุฑูู ุงูุญุฏูุซ: ${hadith.hadithNumber}</span>
                            </div>
                        </div>
                        <div class="hadith-footer">
                            <div class="explanation">${hadith.explanation}</div>
                            <div class="scholar-sayings">
                                <div class="scholar-title">ุฃููุงู ุงูุนููุงุก:</div>
                                <ul class="scholar-list">${scholarItems}</ul>
                            </div>
                        </div>
                    </div>
                `;
                
                container.innerHTML += hadithCard;
            });
        }
        
        // ุฏุงูุฉ ููุชุตููุฉ ุญุณุจ ุงููุฆุฉ
        function filterHadiths(category) {
            if (category === 'all') {
                return hadiths;
            }
            return hadiths.filter(hadith => hadith.category === category);
        }
        
        // ุฏุงูุฉ ููุจุญุซ
        function searchHadiths(query) {
            if (!query.trim()) {
                return hadiths;
            }
            
            const lowerQuery = query.toLowerCase();
            return hadiths.filter(hadith => 
                hadith.text.toLowerCase().includes(lowerQuery) || 
                hadith.explanation.toLowerCase().includes(lowerQuery) ||
                hadith.narrator.toLowerCase().includes(lowerQuery)
            );
        }
        
        // ุชููุฆุฉ ุงูุตูุญุฉ ุนูุฏ ุงูุชุญููู
        document.addEventListener('DOMContentLoaded', function() {
            // ุนุฑุถ ุฌููุน ุงูุฃุญุงุฏูุซ ุฃููุงู
            displayHadiths(hadiths);
            
            // ุฅุถุงูุฉ ุฃุญุฏุงุซ ูุฃุฒุฑุงุฑ ุงูุชุตููุฉ
            document.querySelectorAll('.filter-btn').forEach(button => {
                button.addEventListener('click', function() {
                    // ุฅุฒุงูุฉ ุงููุดุงุท ูู ุฌููุน ุงูุฃุฒุฑุงุฑ
                    document.querySelectorAll('.filter-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    
                    // ุฅุถุงูุฉ ุงููุดุงุท ููุฒุฑ ุงููุญุฏุฏ
                    this.classList.add('active');
                    
                    const category = this.getAttribute('data-category');
                    const filteredHadiths = filterHadiths(category);
                    displayHadiths(filteredHadiths);
                });
            });
            
            // ุฅุถุงูุฉ ุญุฏุซ ูุญูู ุงูุจุญุซ
            document.querySelector('.search-box').addEventListener('input', function() {
                const query = this.value;
                const searchedHadiths = searchHadiths(query);
                
                // ุฅุฐุง ูุงู ููุงู ุจุญุซุ ูุนุฑุถ ุงููุชุงุฆุฌ ูุน ุฅูุบุงุก ุชุญุฏูุฏ ุงููุฆุฉ
                if (query.trim()) {
                    document.querySelectorAll('.filter-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    document.querySelector('.filter-btn[data-category="all"]').classList.add('active');
                }
                
                displayHadiths(searchedHadiths);
            });
        });
    </script>
</body>
